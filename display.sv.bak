module display(input [3:0] displayNum, output logic [6:0] displayOut);

	always_comb begin
		case (displayNum)
			4'd0: displayOut = 7'b1000000; // 0
			4'd1: displayOut = 7'b1111001; // 1
			4'd2: displayOut = 7'b0100100; // 2
			4'd3: displayOut = 7'b0110000; // 3
			4'd4: displayOut = 7'b0011001; // 4
			4'd5: displayOut = 7'b0010010; // 5
			4'd6: displayOut = 7'b0000010; // 6
			4'd7: displayOut = 7'b1111000; // 7
			4'd8: displayOut = 7'b0000000; // 8
			4'd9: displayOut = 7'b0010000; // 9
			4'd10: displayOut = 7'b0001000; // A
			4'd11: displayOut = 7'b1110001; // J 
			4'd12: displayOut = 7'b0011000; // Q 
			4'd13: displayOut = 7'b0001011; // k (might look weird because of hardware, looks like 'h')
			default: displayOut = 7'b1111111;
			
		endcase
	end
endmodule